{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./src",
        "outDir": "./dist",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": false,
        "skipLibCheck": true,
        "paths": {
            "web-music-score/core": [
                "core"
            ],
            "web-music-score/audio": [
                "audio"
            ],
            "web-music-score/audio-synth": [
                "audio-instruments/audio-synth"
            ],
            "web-music-score/audio-cg": [
                "audio-instruments/audio-cg"
            ],
            "web-music-score/theory": [
                "theory"
            ],
            "web-music-score/score": [
                "score"
            ],
            "web-music-score/react-ui": [
                "react-ui"
            ],
            "web-music-score/pieces": [
                "pieces"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compileOnSave": false
}