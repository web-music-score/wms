{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./src",
        "outDir": "./dist",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": false,
        "skipLibCheck": true,
        "paths": {
            "web-music-score-samples/core": [
                "core"
            ],
            "web-music-score-samples/classical-guitar": [
                "classical-guitar"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compileOnSave": false
}