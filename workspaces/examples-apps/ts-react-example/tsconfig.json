{
    "compilerOptions": {
        "target": "es2015",
        "baseUrl": "./src",
        "module": "es2015",
        "moduleResolution": "bundler",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node-modules/**/*"
    ],
    "compileOnSave": false
}