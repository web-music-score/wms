{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "module": "ES2015",
        "moduleResolution": "bundler",
        "declaration": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": false, // Let babel remove comments.
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "stripInternal": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node-modules",
        "**/*.test.ts"
    ],
    "compileOnSave": false
}
